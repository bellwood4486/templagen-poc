<!DOCTYPE html>
<html>
<head>
    <title>Control Flow - Template Features</title>
</head>
<body>
    <h1>Control Flow Statements</h1>

    {{/* 3. If statement */}}
    <section id="conditional">
        <h2>Conditional Rendering</h2>
        {{ if .Status }}
        <p class="status">Status: {{ .Status }}</p>
        {{ end }}
    </section>

    {{/* 4. With statement and else clause */}}
    <section id="with-else">
        <h2>With Statement and Else Clause</h2>
        {{ with .Summary }}
        <div class="summary">
            <h3>Summary</h3>
            <p>{{ .Content }}</p>
            <p>Updated: {{ .LastUpdated }}</p>
        </div>
        {{ else }}
        <p>No summary available. Default message: {{ .DefaultMessage }}</p>
        {{ end }}
    </section>

    <footer>
        <p>Generated by tmpltype - Control Flow Template</p>
    </footer>
</body>
</html>
